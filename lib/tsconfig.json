{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2021",
    "lib": [
      "es2021",
      // This is hacky as heck. We need to manually ensure that all in lib is
      // compatible with both CloudFlare worker and node.js.
      "dom"
    ],
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Emit */
    "noEmit": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
